extends common/layout

block prepend title
  - this.title = "登录";

block append head
  +use-validation("auth-login")

block content
  if error
    #error.ui.error.message= error
  .ui.middle.aligned.center.aligned.grid
    .row
      .column(style="max-width: 450px")
        h2.ui.image.header
          .content(style="margin-bottom: 10px") 登录
        form#login-form.ui.large.form(method="post", action="/auth/login")
          .ui.existing.segment
            .field
              .ui.left.icon.input
                i.user.icon
                input#username(name="username", placeholder="用户名", type="text", value=username)
            .field
              .ui.left.icon.input
                i.lock.icon
                input#password(name="password", placeholder="密码", type="password")
            button.ui.fluid.large.submit.button(type="submit") 登录
            .ui.error.message
        .ui.message
          a(href="/auth/signup") 注册账号
          | &nbsp;&nbsp;&nbsp;&nbsp;
          a(href="/auth/forget") 忘记密码
