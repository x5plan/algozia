doctype html 
include imports
include utils
html(lang="zh-CN", style="position: fixed; width: 100%; height: 100%; padding: 0; margin: 0; overflow: hidden")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=1200")
    block title
      title= this.title ? `${this.title} - ${app.appName}` : app.appName
    block head
      link(rel="icon", href=`${app.cdnUrl}assets/icon.png`)
      link(rel="stylesheet", href=`${app.cdnUrl}fonts/fonts.css`)
      link(rel="stylesheet", href=`${app.cdnUrl}assets/style.css`)

      +import-package-style("semantic-ui/semantic")

  body(style="position: relative; width: 100%; height: 100%; padding: 49px 0 0; margin: 0; overflow-y: overlay")
    .ui.fixed.borderless.menu(style="position: fixed; height: 49px")
      include header
    div(style="padding-top: 28px; display: flex; flex-direction: column; height: 100%")
      .ui.main.container(style="flex-grow: 1")
        block content
      .ui.vertical.footer.segment(style="margin-top: 15px; border-top: none")
        .ui.center.aligned.container
          span(style="color: #999")= app.appName + " "
            | Powered by #[a(href="https://github.com/AntaresQAQ/tywzoj-web2", target="_blank") TYWZOJ2].

  block scripts
    +import-package-script("jquery/jquery")
    +import-package-script("semantic-ui/semantic")
    +import-bundle-script("index")
